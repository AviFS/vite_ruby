{
  "all": {
    "additionalEntrypoints": [
      "~/{assets,fonts,icons,images}/**/*",
      "~/index.html",
      "app/assets/*.css"
    ],
    "watchAdditionalPaths": [
      "app/assets/**/*"
    ]
  },
  "development": {
    "autoBuild": true,
    "publicOutputDir": "vite-dev",
    "port": 3037
  },
  "test": {
    "autoBuild": true,
    "publicOutputDir": "vite-test"
  }
}
